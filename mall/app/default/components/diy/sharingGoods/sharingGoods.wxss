/* common.wxss */
@import "/utils/common.wxss";

/* 商品组 */

.diy-sharingGoods {
  margin: 0;
  padding: 0;
  line-height: 1;
}
.goods-list {
  margin: auto;
  width: 95%;
}
.sharingGoods {
  margin: 20rpx auto;
  padding: 20rpx;
  display: flex;
  height: 320rpx;
  box-sizing: border-box;
  background: #fff;
}
.sharingGoods_left {
  display: flex;
  width: 40%;
  height: 100%;
  background: #fff;
  align-items: center;
}
.sharingGoods_left image {
  display: block;
  width: 240rpx;
  height: 240rpx;
}
.sharingGoods_right {
  position: relative;
  width: 60%;
  height: 100%;
}
.sharingGoods_title {
  display: block;
  margin-top: 20rpx;
  width: 100%;
  font-size: 28rpx;
  line-height: 1.3;
  color: #333;
}
.sharingGoods_desc {
  position: absolute;
  left: 0rpx;
  top: 90rpx;
}
.sharingGoods_desc text {
  display: inline-block;
}
.desc_introduction {
  margin-top: 10rpx;
  line-height: 1.4;
  font-size: 24rpx;
  color: #ff495e;
  width: 400rpx;
}
.desc_situation {
  font-size: 24rpx;
  line-height: 1.3;
  color: rgb(240, 60, 60);
  margin-top: 10rpx;
}
.people {
  margin: 0 13rpx;
}
.cl-9 {
  color: #999;
}
.desc_footer {
  margin-top: 15rpx;
  font-size: 24rpx;
}
.desc_footer .price_x {
  margin-right: 25rpx;
  color: rgb(240, 60, 60);
  font-size: 28rpx;
}
.desc_footer .price_y {
  text-decoration: line-through;
}
.settlement {
  position: absolute;
  right: 0rpx;
  bottom: 0rpx;
  line-height: 55rpx;
  text-align: center;
  font-size: 28rpx;
  border-radius: 40rpx;
  color: #fff;
  background: linear-gradient(to right, rgb(235, 53, 107) 0%, rgb(240, 60, 60) 100%);
  box-shadow: 0px 2px 10px -2px rgb(235, 53, 107);
  border: none;
}
.hide {
  display: none;
}
.show {
  display: block;
}