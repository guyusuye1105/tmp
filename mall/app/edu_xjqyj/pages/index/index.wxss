/* diy组件 */
@import "../../components/diy/index.wxss";

page {
  background: #fff !important;
}
.banner{
  height: 500rpx;
  width: 100%
}
.shop-item{
  width: 280rpx;
  margin-left: 20rpx;
  display: inline-block;
  background-color: #f3f3f3
}
.shop-item2{
  width: 210rpx;
  margin-left: 20rpx;
  display: inline-block;
  background-color: #f3f3f3
}
.shop-item:first-child{
  margin-left: 40rpx;
}
.shop-item2:first-child{
  margin-left: 40rpx;
}
.shop-item:last-child{
  margin-right: 40rpx
}
.shop-item-img{
  width: 280rpx;
  height: 280rpx;
  display: block
}
.shop-item-img2{
  width: 280rpx;
  height: 400rpx;
  display: block
}
.shop-item-img3{
  width: 210rpx;
  height: 300rpx;
  display: block
}
.shop-item-tag{
  width: 212rpx;
  line-height: 40rpx;
  text-align: center;
  color: #ffffff;
  font-size: 28rpx;
  margin: auto;
  margin-top: 20rpx
}
.index-item{
  width: 100%;
	/* height: 420rpx; */
	background-color: #ffffff;
	box-shadow: 0px 2px 5px 0px 
		rgba(171, 171, 171, 0.5);
	border-radius: 8rpx;
  margin-bottom: 40rpx
}
.index-item-img{
  width: 100%;
  height: 280rpx;
  border-radius: 8rpx 8rpx 0 0;
  background-color: #e1e1e1;
  background-position: center;
  background-size: cover
}
.buybtn{
  width: 140rpx;
	height: 50rpx;
	background-color: #fe702e;
	border-radius: 8rpx;
	border: solid 1px #fe702e;
  color: #fff;
  font-size: 24rpx;
  line-height: 50rpx;
  text-align: center
}
